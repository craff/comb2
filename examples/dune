(test
  (name calc)
  (modules calc)
  (preprocess (pps pacomb.ppx))
  (libraries unix pacomb)
  (deps ../tests/big_expr.exe calc.exe)
  (action
    (system "../tests/big_expr.exe 4 4 4 | ./calc.exe")))

